<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing3"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="7"
                android:id="@+id/tvBan"
                android:layout_width="0dp"
                style="@style/title"
                android:text="Bàn số 1"/>

            <TextView
                android:gravity="right"
                android:layout_weight="3"
                android:id="@+id/tvNgayThang"
                android:layout_width="0dp"
                style="@style/text"
                android:text="20/9/2021"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="9"
                android:id="@+id/tvTong"
                android:layout_width="0dp"
                style="@style/text"
                android:text="Tổng: 120.000đ (-0 đ)"/>

            <LinearLayout
                android:layout_width="0dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imbXoa"
                    android:background="@drawable/delete"
                    android:layout_width="@dimen/smallIconSize"
                    android:layout_height="@dimen/smallIconSize" />
            </LinearLayout>
        </LinearLayout>

            <TextView
                android:id="@+id/tvHoTen"
                android:layout_width="match_parent"
                style="@style/text"
                android:text="Họ tên: Nguyễn Văn A"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                style="@style/text"
                android:text="Email: nguyenvana@gmail.com"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>