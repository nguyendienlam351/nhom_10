<?xml version="1.0" encoding="utf-8"?><!--suppress ALL -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KiemKeKho">


    <LinearLayout style="@style/layout">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000">

            <TableRow>

                <TextView
                    style="@style/title"
                    android:layout_width="0dp"
                    android:layout_marginHorizontal="@dimen/spacing1"
                    android:layout_marginTop="@dimen/spacing1"
                    android:layout_marginBottom="@dimen/spacing1"
                    android:layout_weight="5"
                    android:background="#B8B8B8"
                    android:gravity="center_horizontal"
                    android:text="Ngày" />

                <TextView
                    style="@style/title"
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/spacing1"
                    android:layout_marginRight="@dimen/spacing1"
                    android:layout_marginBottom="@dimen/spacing1"
                    android:layout_weight="5"
                    android:background="#B8B8B8"
                    android:gravity="center_horizontal"
                    android:text="Thu" />

                <TextView
                    style="@style/title"
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/spacing1"
                    android:layout_marginRight="@dimen/spacing1"
                    android:layout_marginBottom="@dimen/spacing1"
                    android:layout_weight="5"
                    android:background="#B8B8B8"
                    android:gravity="center_horizontal"
                    android:text="Chi" />

                <TextView
                    style="@style/title"
                    android:layout_width="0dp"
                    android:layout_marginTop="@dimen/spacing1"
                    android:layout_marginRight="@dimen/spacing1"
                    android:layout_marginBottom="@dimen/spacing1"
                    android:layout_weight="5"
                    android:background="#B8B8B8"
                    android:gravity="center_horizontal"
                    android:text="Lợi Nhuận" />
            </TableRow>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lvDoanhThu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableLayout>

    </LinearLayout>
</LinearLayout>