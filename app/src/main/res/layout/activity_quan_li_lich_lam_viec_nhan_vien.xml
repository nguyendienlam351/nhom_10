<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LichLamViecNhanVien">

    <LinearLayout style="@style/layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnGiam"
            android:layout_gravity="center"
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"
            android:layout_marginRight="@dimen/spacing1"
            android:background="@drawable/left_arrow" />

        <TextView
            android:id="@+id/tvNgayBatDau"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/spacing4"
            android:textSize="25dp"
            android:text="20/09/2021" />
        </LinearLayout>

        <TextView
            style="@style/text"
            android:layout_width="30dp"
            android:gravity="center"
            android:text="-"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNgayKetThuc"
            style="@style/text"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/spacing4"
            android:text="26/09/2021" />

        <ImageButton
            android:id="@+id/btnTang"
            android:layout_gravity="center"
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"
            android:background="@drawable/right_arrow" />

        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000">

        <TableRow>

            <TextView
                style="@style/title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/spacing1"
                android:layout_marginTop="@dimen/spacing1"
                android:layout_marginBottom="@dimen/spacing1"
                android:layout_weight="2"
                android:background="#B8B8B8"
                android:gravity="center_horizontal"
                android:text="" />

            <TextView
                style="@style/title"
                android:layout_width="0dp"
                android:layout_marginHorizontal="@dimen/spacing1"
                android:layout_marginTop="@dimen/spacing1"
                android:layout_marginBottom="@dimen/spacing1"
                android:layout_weight="5"
                android:background="#B8B8B8"
                android:gravity="center_horizontal"
                android:text="Ca A \n(6:30 - 14:30)" />

            <TextView
                style="@style/title"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/spacing1"
                android:layout_marginRight="@dimen/spacing1"
                android:layout_marginBottom="@dimen/spacing1"
                android:layout_weight="5"
                android:background="#B8B8B8"
                android:gravity="center_horizontal"
                android:text="Ca B \n(14:30 - 22:30)" />

            <TextView
                style="@style/title"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/spacing1"
                android:layout_marginRight="@dimen/spacing1"
                android:layout_marginBottom="@dimen/spacing1"
                android:layout_weight="5"
                android:background="#B8B8B8"
                android:gravity="center_horizontal"
                android:text="Ca C \n(8:00 - 17:00)" />
        </TableRow>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lvLichLamViec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </TableLayout>
    </LinearLayout>
</LinearLayout>