<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout"
    tools:context=".ChiTietMon">

    <ImageView
        android:id="@+id/imgMon"
        android:layout_width="@dimen/largeImage"
        android:layout_height="@dimen/largeImage"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/image"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tvTenMon"
        style="@style/title"
        android:layout_width="match_parent"
        android:text="@string/tenMon" />

    <TextView
        android:id="@+id/tvLoaiMon"
        style="@style/text"
        android:layout_width="match_parent"
        android:text="@string/loaiMon" />

    <TextView
        android:id="@+id/tvGia"
        style="@style/text"
        android:layout_width="match_parent"
        android:text="@string/gia" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnGiam"
                android:layout_width="@dimen/iconSize"
                android:layout_height="@dimen/iconSize"
                android:layout_marginRight="@dimen/spacing1"
                android:background="@drawable/left_arrow" />

            <TextView
                android:id="@+id/tvSoLuong"
                style="@style/text"
                android:layout_width="wrap_content"
                android:background="@drawable/boder"
                android:paddingLeft="@dimen/spacing3"
                android:paddingTop="@dimen/spacing1"
                android:paddingRight="@dimen/spacing3"
                android:paddingBottom="@dimen/spacing1"
                android:text="1" />

            <ImageButton
                android:id="@+id/btnTang"
                android:layout_width="@dimen/iconSize"
                android:layout_height="@dimen/iconSize"
                android:layout_marginLeft="@dimen/spacing1"
                android:background="@drawable/right_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnThemMon"
                style="@style/addButton"
                android:layout_width="wrap_content"
                android:text="@string/tenBan" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvMonTa"
        style="@style/text"
        android:layout_width="match_parent"
        android:text="@string/moTa" />
</LinearLayout>