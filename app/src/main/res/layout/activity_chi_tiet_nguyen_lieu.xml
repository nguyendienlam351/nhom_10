<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChiTietNguyenLieu">

    <tdc.edu.vn.nhom_10.CustomView.CustomActionBar
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edTenNL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder"
        style="@style/editText"/>

    <LinearLayout
        android:layout_width="match_parent"
        style="@style/spinnerLayout">

        <Spinner
            android:id="@+id/spDonVi"
            android:entries="@array/donvi"
            style="@style/spinner"/>
    </LinearLayout>
    <EditText
        android:id="@+id/edGiaNL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder"
        android:inputType="number"
        style="@style/editText"/>
    <EditText
        android:id="@+id/edMota"
        android:layout_width="match_parent"
        android:gravity="top"
        android:layout_height="150dp"
        android:background="@drawable/boder"
        style="@style/editText"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/btnXoa"
                style="@style/deleteButton"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Xoa"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1">
            <Button
                android:id="@+id/btnThayDoi"
                style="@style/addButton"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ThayDoi"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>