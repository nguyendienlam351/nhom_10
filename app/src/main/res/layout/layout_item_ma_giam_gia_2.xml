<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing1"
    card_view:cardCornerRadius="@dimen/cardview_default_elevation"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="@dimen/spacing3"
        android:paddingHorizontal="@dimen/spacing4"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/tvMaGiamGia"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_weight="8"
                android:layout_margin="0dp"
                android:text="@string/MaGiamGia" />

            <TextView
                android:id="@+id/tvSoLuong"
                android:gravity="right"
                style="@style/text"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:text="10" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/tvGiaTriApDung"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_weight="8"
                android:layout_margin="0dp"
                android:text="50.000 Ä‘" />

            <TextView
                android:id="@+id/tvPhanTram"
                android:gravity="right"
                style="@style/text"
                android:layout_margin="0dp"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:text="10%" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvThoiGian"
            android:gravity="right"
            style="@style/text"
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:text="01/01/2021 - 01/01/2021" />
    </LinearLayout>
</androidx.cardview.widget.CardView>