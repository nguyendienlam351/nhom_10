<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThemNhapKho">

    <tdc.edu.vn.nhom_10.CustomView.CustomActionBar
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout style="@style/layout">

        <TextView
            android:id="@+id/tvHoTen"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Họ tên" />

        <TextView
            android:id="@+id/tvEmail"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email" />

        <TextView
            android:id="@+id/tvTen"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên"
            android:maxLength="13" />

        <TextView
            android:id="@+id/tvSoLuong"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số lượng" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNgay"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày:" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDonVi"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đơn vị"
            android:inputType="text" />

        <TextView
            android:id="@+id/tvGia"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá" />

        <TextView
            android:id="@+id/tvMoTa"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả" />

        <EditText
            android:id="@+id/edtSoLuong"
            style="@style/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số lương"
            android:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <Button
                    android:id="@+id/btnThem"
                    style="@style/addButton"
                    android:layout_width="wrap_content"
                    android:text="Thêm" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>