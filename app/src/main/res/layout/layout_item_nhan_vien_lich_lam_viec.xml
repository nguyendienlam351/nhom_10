<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing1">

        <TextView
            android:id="@+id/tvHoTen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/spacing1"
            android:layout_weight="5"
            android:background="@color/white"
            android:gravity="center"
            android:text="Nguyễn Phương Nam"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/tvSDT"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/spacing1"
            android:layout_weight="5"
            android:background="@color/white"
            android:gravity="center"
            android:text="Số điện thoại"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize" />

        <TextView
            android:id="@+id/tvNgaySinh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/spacing1"
            android:layout_weight="4"
            android:background="@color/white"
            android:gravity="center"
            android:text="Ngày sinh"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">
        <ImageButton
            android:id="@+id/btnThem"
            style="@style/iconButton"
            android:background="@drawable/them" />
        </LinearLayout>
    </TableRow>


</LinearLayout>