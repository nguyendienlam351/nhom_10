<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChiTietNhapKho">

    <tdc.edu.vn.nhom_10.CustomView.CustomActionBar
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout style="@style/layout">

        <TextView
            android:id="@+id/tvHoTen"
            style="@style/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:digits="qwertyuiopasdfghjklzxcvbnm123456789QWERTYUIOPASDFGHJKLZXCVBNM._ "
            android:hint="Họ tên"
            android:inputType="text"
            android:maxLength="30" />

            <TextView
                android:id="@+id/tvEmail"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="70dp"
                android:paddingLeft="5dp"
                android:text="Email" />

        <TextView
            android:id="@+id/tvTen"
            style="@style/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên"
            android:maxLength="13" />

        <TextView
            android:id="@+id/tvDonVi"
            style="@style/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="qwertyuiopasdfghjklzxcvbnm123456789QWERTYUIOPASDFGHJKLZXCVBNM.@ "
            android:hint="Đơn vị"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/tvGia"
            style="@style/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá"
            android:inputType="phone"
            android:maxLength="10" />

        <TextView
            android:id="@+id/tvSoLuong"
            style="@style/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="qwertyuiopasdfghjklzxcvbnm123456789QWERTYUIOPASDFGHJKLZXCVBNM/,. "
            android:hint="Số lương"
            android:inputType="text" />

        <TextView
            android:id="@+id/tvMoTa"
            style="@style/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả"
            android:inputType="phone"
            android:maxLength="10" />

        <EditText
            android:id="@+id/edtSoLuong"
            style="@style/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="qwertyuiopasdfghjklzxcvbnm123456789QWERTYUIOPASDFGHJKLZXCVBNM/,. "
            android:hint="Số lương"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left">

                <Button
                    android:id="@+id/btnXoa"
                    style="@style/deleteButton"
                    android:layout_width="wrap_content"
                    android:text="Xoá" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <Button
                    android:id="@+id/btnThayDoi"
                    style="@style/editButton"
                    android:layout_width="wrap_content"
                    android:text="Thay đổi" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>